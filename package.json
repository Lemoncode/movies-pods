{
  "name": "sample-typescript-pods",
  "version": "1.0.0",
  "description": "In this example we will reorganize the project architecture following a pod approach.",
  "main": "index.js",
  "scripts": {
    "mock-server": "json-server --routes ./config/routes.json --watch mock-data/films-data.json",
    "start": "concurrently \"npm run start:dev\" \"npm run mock-server\"",
    "start:dev": "nodemon --watch webpack.*.js --exec \"webpack-dev-server --config webpack.dev.js\"",
    "start:prod": "nodemon --watch webpack.*.js --exec \"webpack-dev-server --config webpack.prod.js\"",
    "build": "npm run build:dev",
    "build:dev": "rimraf dist && webpack --config webpack.dev.js",
    "build:prod": "rimraf dist && webpack -p --config webpack.prod.js",
    "test": "jest -c ./config/test/jest.json --verbose",
    "test:watch": "jest -c ./config/test/jest.json --verbose --watchAll -i"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/deep-freeze": "^0.1.1",
    "@types/enzyme": "^3.1.15",
    "@types/jest": "^23.3.10",
    "@types/react": "^16.7.13",
    "@types/react-dom": "^16.0.11",
    "@types/react-redux": "^6.0.11",
    "@types/react-router-dom": "^4.3.1",
    "@types/redux-mock-store": "^1.0.0",
    "@types/socket.io-client": "^1.4.32",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "deep-freeze": "0.0.1",
    "enzyme": "^3.8.0",
    "enzyme-adapter-react-16": "^1.7.1",
    "enzyme-to-json": "^3.3.5",
    "html-webpack-plugin": "^3.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.6.0",
    "nodemon": "^1.18.8",
    "raf": "^3.4.1",
    "react-redux": "^6.0.0",
    "redux": "^4.0.1",
    "redux-mock-store": "^1.5.3",
    "rimraf": "^2.6.2",
    "ts-jest": "^23.10.5",
    "ts-lint": "^4.5.1",
    "typescript": "^3.2.2",
    "webpack": "^4.27.1",
    "webpack-bundle-analyzer": "^3.0.3",
