    "@types/axios": "^0.14.0",
    "axios": "^0.18.0",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "connected-react-router": "^6.0.0",
    "history": "^4.7.2",
    "json-server": "^0.14.0",
    "lc-form-validation": "^2.0.0",
    "prop-types": "^15.6.2",
